% beach Beamer colour theme v0.8
% Keith Poore
% 27/8/2013
% tan background, dark navy blue text
%
%Works with: AnnArbor, Antibes, Bergen, Berlin, Berlin, Berkeley, Boadilla, CambridgeUS, Copenhagen, Darmstadt, Dresden, Frankfurt, Goettingen, Hannover, Ilmenau, Madrid, Rochester, Singapore, Szeged
%
%Does not work with: Warsaw (Title bar fades from blue to tan), Goettingen (Side bar fades from grey to white)
%

\mode<presentation>

\definecolor{tan}{RGB}{210,165,96}
\definecolor{navy}{RGB}{0,12,58}
\definecolor{easterpeach}{RGB}{255,204,115}
\definecolor{waterblue}{RGB}{10,108,195}

\setbeamercolor{alerted text}{fg=white}
\setbeamercolor{background canvas}{bg=tan}

\setbeamercolor{block body alerted}{bg=white}
\setbeamercolor{block body}{bg=white}
\setbeamercolor{block body example}{bg=white}
\setbeamercolor{block title alerted}{bg=waterblue, fg=white}
\setbeamercolor{block title}{bg=waterblue, fg=white}
\setbeamercolor{block title example}{bg=waterblue, fg=white}

\setbeamercolor{fine separation line}{bg=black}
\setbeamercolor{frametitle}{fg=navy}
\setbeamercolor{item projected}{bg=white, fg=black}
\setbeamercolor{normal text}{bg=easterpeach, fg=navy}

\setbeamercolor{palette primary}{bg=easterpeach, fg=navy}
\setbeamercolor{palette secondary}{bg=easterpeach, fg=navy}
\setbeamercolor{palette tertiary}{bg=easterpeach, fg=navy}
\setbeamercolor{palette quaternary}{bg=easterpeach, fg=navy}

\setbeamercolor{palette sidebar primary}{bg=easterpeach, fg=navy}
\setbeamercolor{palette sidebar quaternary}{bg=easterpeach, fg=navy}
\setbeamercolor{palette sidebar secondary}{bg=easterpeach, fg=navy}
\setbeamercolor{palette sidebar tertiary}{bg=easterpeach, fg=navy}

\setbeamercolor{section in sidebar}{fg=black, bg=white}
\setbeamercolor{section in sidebar shaded}{fg=navy, bg=tan}
\setbeamercolor{subsection in sidebar}{fg=black, bg=white}
\setbeamercolor{subsection in sidebar shaded}{fg=navy, bg=tan}

\setbeamercolor{separation line}{bg=easterpeach, fg=navy}
\setbeamercolor{sidebar}{bg=easterpeach, fg=navy}
\setbeamercolor{structure}{bg=easterpeach, fg=navy}

\setbeamercolor{itemize item}{bg=easterpeach, fg=navy}
\setbeamercolor{enumerate item}{bg=tan, fg=navy}

\setbeamercolor{title}{bg=tan, fg=waterblue}
\setbeamercolor{titlelike}{bg=tan, fg=waterblue}
\setbeamercolor{title in sidebar}{bg=tan, fg=waterblue}

\setbeamercolor{logo}{bg=navy}

\setbeamercolor{frametitle}{bg=waterblue, fg=white}

\setbeamertemplate{blocks}[rounded][shadow=false]
\setbeamertemplate{background canvas}[vertical shading][bottom=easterpeach,top=easterpeach]
\setbeamertemplate{sidebar canvas left}[horizontal shading][left=easterpeach,right=tan]
\setbeamertemplate{sidebar canvas right}[horizontal shading][left=easterpeach,right=tan]
%%\setbeamertemplate{frametitle}[hotizontal shading][left=waterblue,right=navy]

%%TOC
\setbeamercolor{section in toc}{fg=waterblue}
\setbeamercolor{subsection in toc}{fg=waterblue}
\setbeamercolor{subsubsection in toc}{fg=waterblue}
\setbeamercolor{section in toc shaded}{fg=navy, bg=white}
\setbeamercolor{subsection in toc shaded}{fg=navy, bg=white}
\setbeamercolor{subsubsection in toc shaded}{fg=navy, bg=white}
\setbeamercolor{section number projected}{fg=white, bg=navy}
\mode
<all>

\beamertemplatenavigationsymbolsempty
\mode
<all>
