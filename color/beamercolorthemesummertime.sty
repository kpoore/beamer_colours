% Summertime Beamer colour theme v0.7
% Keith Poore
% 3/6/2013
% Dark Green background, Light Brown Text background, light green text, light brown
%
%Works with:AnnArbor, Antibes, Bergen, Berlin, Berkeley, Boadilla, CambridgeUS, Copenhagen, Darmstadt, Dresden, Hannover, Ilmenau, Frankfurt, Madrid, Rochester, Singapore, Warsaw 

%  (buttons)
%
%Does not work with: Goettingen (Sidebar), Szeged (separators)
%

\mode<presentation>

%%%%%   Definition of colours
\definecolor{sumorange}{RGB}{223,127,0}
\definecolor{sumyellow}{RGB}{237,253,4}
\definecolor{coolgrey}{RGB}{103,104,88}


%%%%   Set colours to elements
\setbeamercolor{palette primary}{bg=sumorange, fg=black}
\setbeamercolor{palette secondary}{bg=sumorange, fg=black}
\setbeamercolor{palette tertiary}{bg=sumorange, fg=coolgrey}
\setbeamercolor{palette quaternary}{bg=sumorange, fg=coolgrey}

\setbeamercolor{palette sidebar primary}{bg=sumyellow, fg=black}
\setbeamercolor{palette sidebar secondary}{bg=sumyellow, fg=black}
\setbeamercolor{palette sidebar tertiary}{fg=sumyellow, bg=black}
\setbeamercolor{palette sidebar quaternary}{fg=sumyellow, bg=black}

\setbeamercolor{alerted text}{fg=black} %% "current" text
\setbeamercolor{background canvas}{bg=sumorange}%%
\setbeamercolor{background}{bg=sumorange}

\setbeamercolor{block body alerted}{bg=sumyellow}
\setbeamercolor{block body}{bg=sumyellow}
\setbeamercolor{block body example}{bg=sumorange}
\setbeamercolor{block title alerted}{bg=sumyellow, fg=coolgrey}
\setbeamercolor{block title}{bg=coolgrey, fg=black}
\setbeamercolor{block title example}{bg=sumorange, fg=black}

\setbeamercolor{fine separation line}{}

\setbeamercolor{item projected}{bg=black, fg=sumyellow}
\setbeamercolor{normal text}{fg=black}

\setbeamercolor{section in sidebar}{fg=coolgrey}
\setbeamercolor{section in sidebar shaded}{fg=black}
\setbeamercolor{subsection in sidebar}{fg=red}
\setbeamercolor{subsection in sidebar shaded}{fg=black}

\setbeamercolor{separation line}{}
\setbeamercolor{sidebar}{bg=sumyellow, fg=coolgrey}
\setbeamercolor{structure}{bg=sumyellow, fg=black}

\setbeamercolor{itemize item}{fg=black}
\setbeamercolor{enumerate item}{bg=black, fg=sumyellow}

\setbeamercolor{title}{bg=coolgrey, fg=sumyellow}
\setbeamercolor{subtitle}{bg=coolgrey, fg=sumyellow}
\setbeamercolor{title page}{bg=coolgrey, fg=black}
\setbeamercolor{titlelike}{bg=coolgrey, fg=black}
\setbeamercolor{title in sidebar}{fg=coolgrey}

\setbeamercolor{logo}{bg=sumyellow}

\setbeamercolor{frametitle}{bg=sumyellow, fg=black}

\setbeamertemplate{blocks}[rounded][shadow=true]
%\setbeamertemplate{background canvas}[vertical shading][bottom=white,top=black]
%\setbeamertemplate{sidebar canvas left}[horizontal shading][left=treebrown,right=black]

\beamertemplatenavigationsymbolsempty
\mode
<all>
