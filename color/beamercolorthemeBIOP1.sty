%New colours will match U of Guelph's colours.
%
\definecolor{gryphred}{RGB}{122,20,20}
\definecolor{gryphgold}{RGB}{192,166,82}
\mode<presentation>

\setbeamercolor{palette primary}{use=structure,fg=gryphgold,bg=gryphred}
\setbeamercolor{palette secondary}{use=structure,fg=gryphgold,bg=gryphred}
\setbeamercolor{palette tertiary}{use=structure,fg=gryphgold,bg=gryphred}
\setbeamercolor{palette quaternary}{use=structure,fg=gryphgold,bg=gryphred}

\setbeamercolor{sidebar}{bg=gryphred}

\setbeamercolor{palette sidebar primary}{use=normal text,fg=gryphgold}
\setbeamercolor{palette sidebar secondary}{use=structure,fg=gryphgold}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=gryphgold}
\setbeamercolor{palette sidebar quaternary}{use=structure,fg=gryphgold}

\setbeamercolor*{titlelike}{parent=palette primary}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
